{{#each data.data}}
  <div class="blog py-3">
    <h4>{{name}}</h4>
    <div>by
      {{author}}
      in
      <a href="#" onclick="loadBlogs('blogs/categories/{{categoryId}}')">Blog,
        {{category.name}}</a>
      on
      {{date}}
      Hits: 208
      <a href="#" onclick="loadDetails('{{id}}')">Comments ({{comments.length}})</a>
    </div>
    <div class="py-3">
      <img src="{{thumbpath}}" alt="" class="img-rounded" />
      {{{summary}}}
      <br />
      <br />
      <a href="#" class="readmore" onclick="loadDetails('{{id}}')">Readmore</a>
    </div>
  </div>
{{/each}}